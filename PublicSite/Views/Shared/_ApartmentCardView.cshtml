@model  DataLayer.Models.Apartment

<style>
    .hover {
        color: #0000;
        background: linear-gradient(90deg,#1095c1 50%,#000 0) var(--_p,100%)/200% no-repeat;
        -webkit-background-clip: text;
        background-clip: text;
        transition: .4s;
    }

    .hover:hover {
        --_p: 0%;
    }

    h3 {
        font-family: system-ui, sans-serif;
        font-size: 2rem;
        margin: 0;
        cursor: pointer;
        padding: 0 .1em;
    }
</style>

<div class="shadow-lg p-3 mb-5 bg-body rounded" style="display: flex; align-items:center">
    <div style="padding: .5em; width: 50%">
        <img src="@Model.Images.First(i => i.IsRepresentative).Path" style="width: 100%; object-fit: cover; border-radius: .2em" />
    </div>
    <div style="padding: .5em; width: 50%">
        <h3 class="hover" onclick="location.href='@Url.Action("Details", "Apartment", new { apartmentId = Model.Id })'">@Model.Name</h3>
        <ul style="padding-top:.5em">
            <li>@Model.CityName</li>
            <li>@Model.BeachDistance m from beach</li>
            <li>@Model.TotalRooms rooms</li>
            <li>@Model.MaxAdults adults</li>
            <li>@Model.MaxChildren children</li>
        </ul>
        <div style="display:flex; justify-content: space-between;">
            <h4>@Model.Price.ToString("0.##") €</h4>
            <input style="font-weight: 600" type="submit" class="btn btn-info" value="View more.." onclick="location.href='@Url.Action("Details", "Apartment", new { apartmentId = Model.Id })'" />
        </div>
    </div>
</div>
