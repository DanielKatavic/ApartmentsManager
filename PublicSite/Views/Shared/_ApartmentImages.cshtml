@model IList<DataLayer.Models.Image>
<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
    <div class="carousel-inner">
        <img id="btn-fullscreen" src="~/Content/images/full-screen.png" style="position: absolute; right: 1em; top: 1em; z-index: 10; width: 1.7em; height: 1.7em; cursor: pointer;" />
        @{
            <div class="carousel-item active">
                <img src="@(Model[0].Path.Contains("http") ? Model[0].Path : Url.Action("ImageSrc", "Apartment", Model[0].Path))" class="d-block w-100" style="border-radius: .5em">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@Model[0].Name</h5>
                </div>
            </div>
            foreach (var image in Model.Skip(1))
            {
                <div class="carousel-item">
                    <img src="@(image.Path.Contains("http") ? image.Path : Url.Action("ImageSrc", "Apartment", image.Path))" class="d-block w-100" style="border-radius: .5em">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@image.Name</h5>
                    </div>
                </div>
            }
        }
    </div>
    @if (Model.Count > 1)
    {
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    }
</div>